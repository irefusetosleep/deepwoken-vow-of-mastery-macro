{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "deepwoken-vow-of-mastery-macro",
  "version": "0.1.0",
  "identifier": "com.deepwoken-vow-of-mastery-macro.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {

    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Cinder Talisman Macro",
        "url": "index.html",
        "devtools": true,
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "globalshortcut": {}
  }
}
